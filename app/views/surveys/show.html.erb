<p id="notice"><%= notice %></p>

<h1><%= link_to @survey.team.name, @survey.team %></h1>
<h2><%= @survey.name %></h2>
<h3>Submissions</h3>

<table>

  <thead>
    <tr>
      <th>Date</th>
      <th>1-3 averaged score</th>
      <th>4-6 averaged score</th>
      <th>7-9 averaged score</th>
      <th>10-12 averaged score</th>
      <th>13-15 averaged score</th>
    </tr>
  </thead>

<% @survey.submissions.each do |submission| %>
  <tr>
    <td><%= link_to submission.submitted_date, submission %></td>
    <td><%= submission.psychological_safety_avg_score.round(2) %></td>
    <td><%= submission.dependability_avg_score.round(2) %></td>
    <td><%= submission.structure_clarity_avg_score.round(2) %></td>
    <td><%= submission.meaning_avg_score.round(2) %></td>
    <td><%= submission.impact_avg_score.round(2) %></td>
  </tr>
<% end %>
</table>

<p>
<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
</p>
