<p id="notice"><%= notice %></p>

<h1><%= link_to @survey.team.name, @survey.team %></h1>
<h2><%= @survey.name %></h2>
<p><%= link_to "view all surveys", @survey.team %></p>
<table>

  <thead>
    <tr>
      <th class="empty"></th>
      <th class="table-header" colspan="5">Individual Average Score (Questions)</th>
    </tr>
    <tr>
      <th>Submission</th>
      <th>Psychological Safety (1-3)</th>
      <th>Dependability (4-6)</th>
      <th>Structure Clarity (7-9)</th>
      <th>Meaning (10-12)</th>
      <th>Impact (13-15)</th>
      </tr>
  </thead>

<% @survey.submissions.each do |submission| %>
  <tr>
    <td><%= link_to submission.submitted_date, submission %></td>
    <td><%= submission.individual_psychological_safety_avg_score.round(2) %></td>
    <td><%= submission.individual_dependability_avg_score.round(2) %></td>
    <td><%= submission.individual_structure_clarity_avg_score.round(2) %></td>
    <td><%= submission.individual_meaning_avg_score.round(2) %></td>
    <td><%= submission.individual_impact_avg_score.round(2) %></td>
  </tr>
<% end %>
</table>

<p>
<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
</p>
