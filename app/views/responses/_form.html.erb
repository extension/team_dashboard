<%= form_with(model: response) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
        <% response.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %>
    <%= form.text_area :question %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score %>
  </div>

  <div class="field">
    <%= form.label :time_entered %>
    <%= form.datetime_select :time_entered %>
  </div>

  <div class="field">
    <%= form.label :question_number %>
    <%= form.text_field :question_number %>
  </div>

  <div class="field">
    <%= form.label :submission_id %>
    <%= form.text_field :submission_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
